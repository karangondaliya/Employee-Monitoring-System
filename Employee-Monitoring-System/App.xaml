<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Employee_Monitoring_System.Converters"
             x:Class="Employee_Monitoring_System.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:PageToColorConverter x:Key="PageToColorConverter"/>
            <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <local:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
            <local:BooleanInverterConverter x:Key="BooleanInverterConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
