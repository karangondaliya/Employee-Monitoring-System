<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Employee_Monitoring_System.Views.UpdatePasswordPage"
             Title="Update Password">

    <StackLayout Padding="20" Spacing="16">
        <Label Text="Update Your Password"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="OldPasswordEntry" Placeholder="Old Password" IsPassword="True"/>
        <Entry x:Name="NewPasswordEntry" Placeholder="New Password" IsPassword="True"/>

        <Button Text="Update Password"
                BackgroundColor="Green"
                TextColor="White"
                Clicked="OnUpdatePasswordClicked"/>
    </StackLayout>

</ContentPage>
