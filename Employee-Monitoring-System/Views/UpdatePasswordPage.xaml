<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Employee_Monitoring_System.Views.UpdatePasswordPage"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*,Auto"
          Padding="20">

        <!-- Header Section -->
        <StackLayout Grid.Row="0" Spacing="4" Margin="0,20,0,30">
            <Label Text="Update Password"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#333333"
                   HorizontalOptions="Center"/>
            <Label Text="Please enter your details below"
                   FontSize="16"
                   TextColor="#666666"
                   HorizontalOptions="Center"/>
        </StackLayout>

        <!-- Form Section -->
        <VerticalStackLayout Grid.Row="1" 
                             VerticalOptions="Center" 
                             Spacing="20">

            <Frame BorderColor="#E0E0E0"
                   CornerRadius="8"
                   HasShadow="False"
                   Padding="15,5"
                   Margin="0,5">
                <Entry x:Name="EmailEntry" 
                       Placeholder="Email Address" 
                       Keyboard="Email"
                       PlaceholderColor="#AAAAAA"
                       TextColor="#333333"/>
            </Frame>

            <Frame BorderColor="#E0E0E0"
                   CornerRadius="8"
                   HasShadow="False"
                   Padding="15,5"
                   Margin="0,5">
                <Entry x:Name="OldPasswordEntry" 
                       Placeholder="Current Password" 
                       IsPassword="True"
                       PlaceholderColor="#AAAAAA"
                       TextColor="#333333"/>
            </Frame>

            <Frame BorderColor="#E0E0E0"
                   CornerRadius="8"
                   HasShadow="False"
                   Padding="15,5"
                   Margin="0,5">
                <Entry x:Name="NewPasswordEntry" 
                       Placeholder="New Password" 
                       IsPassword="True"
                       PlaceholderColor="#AAAAAA"
                       TextColor="#333333"/>
            </Frame>

            <Button Text="UPDATE PASSWORD"
                    BackgroundColor="#2E7D32"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    HeightRequest="50"
                    Margin="0,15,0,0"
                    Clicked="OnUpdatePasswordClicked"/>

            <Button Text="CANCEL"
                    BackgroundColor="Transparent"
                    TextColor="#666666"
                    FontAttributes="Bold"
                    BorderWidth="0"
                    Margin="0,5,0,0"
                    Clicked="OnCancelClicked"/>
        </VerticalStackLayout>

        <!-- Footer Section -->
        <Label Grid.Row="2"
               Text="Â© 2025 WorkHub - Employee Monitoring System"
               TextColor="#999999"
               FontSize="12"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,0,0,10"/>
    </Grid>
</ContentPage>