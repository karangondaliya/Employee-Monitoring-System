<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Employee_Monitoring_System.Views.Components"
             x:Class="Employee_Monitoring_System.Views.LeaveRequestPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid ColumnDefinitions="250, *" RowDefinitions="*">

        <!-- Sidebar (FULL HEIGHT) -->
        <ContentView Grid.Row="0" Grid.Column="0" BackgroundColor="{DynamicResource SidebarBackgroundColor}">
            <controls:Sidebar />
        </ContentView>

        <!-- Right Side (Navbar on Top, Content Below) -->
        <Grid Grid.Row="0" Grid.Column="1" RowDefinitions="Auto, *">
            <!-- Navbar -->
            <ContentView Grid.Row="0">
                <controls:Navbar />
            </ContentView>

            <!-- Main Content Area -->
            <ScrollView Grid.Row="1">
                <Grid Padding="30" RowDefinitions="Auto, Auto, *" RowSpacing="20">

                    <!-- Header Section -->
                    <Grid Grid.Row="0" ColumnDefinitions="*, Auto, Auto" ColumnSpacing="15">
                        <VerticalStackLayout Grid.Column="0" Spacing="5">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="calendar.png" WidthRequest="24" HeightRequest="24" />
                                <Label Text="Leave Management" 
                                       FontSize="28" 
                                       FontAttributes="Bold" 
                                       TextColor="{DynamicResource PrimaryTextColor}" />
                            </HorizontalStackLayout>
                            <Label Text="Request and manage your time off" 
                                   FontSize="14"
                                   TextColor="{DynamicResource SecondaryTextColor}"
                                   Margin="34,0,0,0" />
                        </VerticalStackLayout>

                        <Button Grid.Column="1"
                                Text="Calendar View"
                                FontSize="14"
                                Padding="15,0"
                                BackgroundColor="#303846"
                                TextColor="White"
                                CornerRadius="5"
                                HeightRequest="40"
                                Command="{Binding CalendarViewCommand}" />

                        <Button Grid.Column="2"
                                Text="New Request"
                                FontSize="14"
                                Padding="15,0"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                CornerRadius="5"
                                HeightRequest="40"
                                Clicked="OnAddLeaveRequestClicked" />
                    </Grid>

                    <!-- Tabs -->
                    <Border Grid.Row="1" 
                            Stroke="#303846" 
                            StrokeThickness="1" 
                            StrokeShape="RoundRectangle 8"
                            HeightRequest="45"
                            WidthRequest="400"
                            HorizontalOptions="Start">
                        <HorizontalStackLayout Spacing="0">
                            <Button x:Name="MyRequestsTab"
                                    Text="My Requests"
                                    BackgroundColor="#303846"
                                    TextColor="White"
                                    FontSize="14"
                                    WidthRequest="133"
                                    HeightRequest="45"
                                    Clicked="OnMyRequestsTabClicked"/>
                            <Button x:Name="TeamRequestsTab"
                                    Text="Team Requests"
                                    BackgroundColor="Transparent"
                                    TextColor="#303846"
                                    FontSize="14"
                                    WidthRequest="133"
                                    HeightRequest="45"
                                    CornerRadius="0"
                                    Clicked="OnTeamRequestsTabClicked"/>
                            <Button x:Name="LeavePolicyTab"
                                    Text="Leave Policy"
                                    BackgroundColor="Transparent"
                                    TextColor="#303846"
                                    FontSize="14"
                                    WidthRequest="133"
                                    HeightRequest="45"
                                    Clicked="OnLeavePolicyTabClicked"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Content Section -->
                    <Grid Grid.Row="2" ColumnDefinitions="340, *" ColumnSpacing="20">
                        <!-- Left Column - Leave Balance & Holidays -->
                        <Grid Grid.Column="0" RowDefinitions="Auto, *" RowSpacing="20">

                            <!-- Leave Balance Section -->
                            <Border Grid.Row="0"
                                    StrokeShape="RoundRectangle 10"
                                    BackgroundColor="#1F2937"
                                    Padding="20">
                                <VerticalStackLayout Spacing="15">
                                    <Label Text="Leave Balance" 
                                           FontSize="20" 
                                           FontAttributes="Bold" 
                                           TextColor="White" />

                                    <Label Text="Your available leave days" 
                                           FontSize="14" 
                                           TextColor="#B0B9C6" />

                                    <!-- Annual Leave -->
                                    <VerticalStackLayout Spacing="5">
                                        <Grid ColumnDefinitions="*, Auto">
                                            <Label Text="Annual Leave" 
                                                   TextColor="White" 
                                                   FontSize="14"
                                                   Grid.Column="0" />
                                            <Label Text="{Binding AnnualLeaveBalance, StringFormat='{0} / 20 days'}" 
                                                   TextColor="White" 
                                                   FontSize="14"
                                                   Grid.Column="1" />
                                        </Grid>

                                        <Grid ColumnDefinitions="*, Auto">
                                            <ProgressBar Progress="{Binding AnnualLeaveProgress}" 
                                                         ProgressColor="#4CAF50" 
                                                         BackgroundColor="#374151" 
                                                         HeightRequest="6" 
                                                         Grid.Column="0" 
                                                         Grid.ColumnSpan="2"/>
                                        </Grid>

                                        <Label Text="{Binding AnnualLeaveRemaining, StringFormat='{0} remaining'}" 
                                               TextColor="#B0B9C6" 
                                               FontSize="12"
                                               HorizontalOptions="End" />
                                    </VerticalStackLayout>

                                    <!-- Sick Leave -->
                                    <VerticalStackLayout Spacing="5">
                                        <Grid ColumnDefinitions="*, Auto">
                                            <Label Text="Sick Leave" 
                                                   TextColor="White" 
                                                   FontSize="14"
                                                   Grid.Column="0" />
                                            <Label Text="{Binding SickLeaveBalance, StringFormat='{0} / 15 days'}" 
                                                   TextColor="White" 
                                                   FontSize="14"
                                                   Grid.Column="1" />
                                        </Grid>

                                        <Grid ColumnDefinitions="*, Auto">
                                            <ProgressBar Progress="{Binding SickLeaveProgress}" 
                                                         ProgressColor="#4CAF50" 
                                                         BackgroundColor="#374151" 
                                                         HeightRequest="6" 
                                                         Grid.Column="0" 
                                                         Grid.ColumnSpan="2"/>
                                        </Grid>

                                        <Label Text="{Binding SickLeaveRemaining, StringFormat='{0} remaining'}" 
                                               TextColor="#B0B9C6" 
                                               FontSize="12"
                                               HorizontalOptions="End" />
                                    </VerticalStackLayout>

                                    <!-- Personal Leave -->
                                    <VerticalStackLayout Spacing="5">
                                        <Grid ColumnDefinitions="*, Auto">
                                            <Label Text="Personal Leave" 
                                                   TextColor="White" 
                                                   FontSize="14"
                                                   Grid.Column="0" />
                                            <Label Text="{Binding PersonalLeaveBalance, StringFormat='{0} / 5 days'}" 
                                                   TextColor="White" 
                                                   FontSize="14"
                                                   Grid.Column="1" />
                                        </Grid>

                                        <Grid ColumnDefinitions="*, Auto">
                                            <ProgressBar Progress="{Binding PersonalLeaveProgress}" 
                                                         ProgressColor="#4CAF50" 
                                                         BackgroundColor="#374151" 
                                                         HeightRequest="6" 
                                                         Grid.Column="0" 
                                                         Grid.ColumnSpan="2"/>
                                        </Grid>

                                        <Label Text="{Binding PersonalLeaveRemaining, StringFormat='{0} remaining'}" 
                                               TextColor="#B0B9C6" 
                                               FontSize="12"
                                               HorizontalOptions="End" />
                                    </VerticalStackLayout>

                                    <!-- Unpaid Leave -->
                                    <VerticalStackLayout Spacing="5">
                                        <Grid ColumnDefinitions="*, Auto">
                                            <Label Text="Unpaid Leave" 
                                                   TextColor="White" 
                                                   FontSize="14"
                                                   Grid.Column="0" />
                                            <Label Text="{Binding UnpaidLeaveBalance, StringFormat='{0} / 30 days'}" 
                                                   TextColor="White" 
                                                   FontSize="14"
                                                   Grid.Column="1" />
                                        </Grid>

                                        <Grid ColumnDefinitions="*, Auto">
                                            <ProgressBar Progress="{Binding UnpaidLeaveProgress}" 
                                                         ProgressColor="#64748B" 
                                                         BackgroundColor="#374151" 
                                                         HeightRequest="6" 
                                                         Grid.Column="0" 
                                                         Grid.ColumnSpan="2"/>
                                        </Grid>

                                        <Label Text="{Binding UnpaidLeaveRemaining, StringFormat='{0} remaining'}" 
                                               TextColor="#B0B9C6" 
                                               FontSize="12"
                                               HorizontalOptions="End" />
                                    </VerticalStackLayout>

                                    <!-- Full Report Button -->
                                    <Button Text="View Full Report"
                                            BackgroundColor="#303846"
                                            TextColor="White"
                                            FontSize="14"
                                            CornerRadius="5"
                                            HeightRequest="40"
                                            HorizontalOptions="Fill"
                                            Command="{Binding ViewFullReportCommand}" />
                                </VerticalStackLayout>
                            </Border>

                            <!-- Upcoming Holidays Section -->
                            <Border Grid.Row="1"
                                    StrokeShape="RoundRectangle 10"
                                    BackgroundColor="#1F2937"
                                    Padding="20">
                                <VerticalStackLayout Spacing="15">
                                    <Label Text="Upcoming Holidays" 
                                           FontSize="20" 
                                           FontAttributes="Bold" 
                                           TextColor="White" />

                                    <Label Text="Official company holidays" 
                                           FontSize="14" 
                                           TextColor="#B0B9C6" />

                                    <CollectionView ItemsSource="{Binding UpcomingHolidays}" 
                                                   EmptyView="No upcoming holidays">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid ColumnDefinitions="Auto, *, Auto" Padding="0,10">
                                                    <Border Grid.Column="0"
                                                            WidthRequest="40"
                                                            HeightRequest="40"
                                                            StrokeShape="RoundRectangle 20"
                                                            BackgroundColor="#374151"
                                                            HorizontalOptions="Start"
                                                            VerticalOptions="Center">
                                                        <Label Text="ðŸ“…"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               FontSize="16" />
                                                    </Border>

                                                    <VerticalStackLayout Grid.Column="1" 
                                                                         Margin="15,0,0,0"
                                                                         VerticalOptions="Center">
                                                        <Label Text="{Binding Title}" 
                                                               TextColor="White" 
                                                               FontSize="14" />
                                                        <Label Text="{Binding Date, StringFormat='{0:ddd, MMM d}'}" 
                                                               TextColor="#B0B9C6" 
                                                               FontSize="12" />
                                                    </VerticalStackLayout>

                                                    <Border Grid.Column="2"
                                                            Padding="8,4"
                                                            StrokeShape="RoundRectangle 12"
                                                            BackgroundColor="#7F1D1D"
                                                            VerticalOptions="Center">
                                                        <Label Text="Holiday"
                                                               TextColor="White"
                                                               FontSize="12" />
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </VerticalStackLayout>
                            </Border>
                        </Grid>

                        <!-- Right Column - Leave Requests List -->
                        <Border Grid.Column="1"
                                StrokeShape="RoundRectangle 10"
                                BackgroundColor="#1F2937"
                                Padding="20">
                            <Grid RowDefinitions="Auto, *" RowSpacing="20">
                                <VerticalStackLayout Grid.Row="0" Spacing="5">
                                    <Label Text="My Leave Requests" 
                                           FontSize="20" 
                                           FontAttributes="Bold" 
                                           TextColor="White" />

                                    <Label Text="Status of your leave requests" 
                                           FontSize="14" 
                                           TextColor="#B0B9C6" />
                                </VerticalStackLayout>

                                <ScrollView Grid.Row="1">
                                    <VerticalStackLayout Spacing="15" x:Name="LeaveRequestsContainer" BindableLayout.ItemsSource="{Binding LeaveRequests}">
                                        <BindableLayout.EmptyView>
                                            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20" Margin="0,50,0,0">
                                                <Label Text="No leave requests found" 
                                                       FontSize="18" 
                                                       TextColor="#B0B9C6"
                                                       HorizontalOptions="Center" />
                                                <Label Text="Your leave requests will appear here" 
                                                       FontSize="14" 
                                                       TextColor="#64748B"
                                                       HorizontalOptions="Center" />
                                            </VerticalStackLayout>
                                        </BindableLayout.EmptyView>
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate>
                                                <Border StrokeShape="RoundRectangle 10"
                                                        StrokeThickness="1"
                                                        Stroke="#374151"
                                                        Padding="20"
                                                        Margin="0,0,0,10">
                                                    <Grid RowDefinitions="Auto, Auto" RowSpacing="15">
                                                        <!-- Leave Request Header -->
                                                        <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto">
                                                            <Border Grid.Column="0"
                                                                    WidthRequest="40"
                                                                    HeightRequest="40"
                                                                    StrokeShape="RoundRectangle 20"
                                                                    BackgroundColor="#374151">
                                                                <Label Text="ðŸ“…"
                                                                       HorizontalOptions="Center"
                                                                       VerticalOptions="Center"
                                                                       FontSize="16" />
                                                            </Border>

                                                            <VerticalStackLayout Grid.Column="1" 
                                                                                Margin="15,0,0,0">
                                                                <Label Text="{Binding LeaveType}" 
                                                                        TextColor="White" 
                                                                        FontSize="16" 
                                                                        FontAttributes="Bold" />
                                                                <Label Text="{Binding DateRange}" 
                                                                        TextColor="#B0B9C6" 
                                                                        FontSize="14" />
                                                            </VerticalStackLayout>

                                                            <Button Grid.Column="2"
                                                                    Text="View Details"
                                                                    BackgroundColor="#303846"
                                                                    TextColor="White"
                                                                    FontSize="12"
                                                                    CornerRadius="5"
                                                                    HeightRequest="35"
                                                                    Padding="15,0"
                                                                    VerticalOptions="Start"
                                                                    Command="{Binding ViewDetailsCommand}" />
                                                        </Grid>

                                                        <!-- Leave Request Footer -->
                                                        <Grid Grid.Row="1" ColumnDefinitions="*, Auto, Auto">
                                                            <Label Grid.Column="0"
                                                                   Text="{Binding Description}"
                                                                   TextColor="#B0B9C6"
                                                                   FontSize="14" />

                                                            <Border Grid.Column="1"
                                                                    Padding="10,5"
                                                                    StrokeShape="RoundRectangle 15"
                                                                    BackgroundColor="{Binding StatusColor}"
                                                                    Margin="0,0,10,0">
                                                                <Label Text="{Binding Status}"
                                                                       TextColor="White"
                                                                       FontSize="12"
                                                                       FontAttributes="Bold" />
                                                            </Border>

                                                            <Button Grid.Column="2"
                                                                    Text="Cancel"
                                                                    IsVisible="{Binding CanCancel}"
                                                                    BackgroundColor="#64748B"
                                                                    TextColor="White"
                                                                    FontSize="12"
                                                                    CornerRadius="5"
                                                                    HeightRequest="35"
                                                                    Padding="15,0"
                                                                    Command="{Binding CancelCommand}" />
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </VerticalStackLayout>
                                </ScrollView>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>